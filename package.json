{
    "name": "rector-vscode",
    "displayName": "Rector",
    "description": "Rector - Instant Upgrades and Automated Refactoring",
    "icon": "icon.png",
    "version": "0.4.0",
    "publisher": "vix",
    "repository": {
        "type": "git",
        "url": "https://github.com/vix-4800/rector-vsc"
    },
    "engines": {
        "vscode": "^1.105.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "keywords": [
        "php",
        "rector",
        "refactoring",
        "code quality"
    ],
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "rector.processFile",
                "title": "Rector: Process Current File"
            },
            {
                "command": "rector.processFileWithDiff",
                "title": "Rector: Process Current File (Show Diff)"
            },
            {
                "command": "rector.processFiles",
                "title": "Rector: Refactor Selected Files/Folders"
            },
            {
                "command": "rector.clearCache",
                "title": "Rector: Clear Cache"
            },
            {
                "command": "rector.showOutput",
                "title": "Rector: Show Output"
            },
            {
                "command": "rector.applyDiffChanges",
                "title": "Rector: Apply Diff Changes",
                "icon": "$(check)"
            },
            {
                "command": "rector.discardDiffChanges",
                "title": "Rector: Discard Diff Changes",
                "icon": "$(close)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Rector",
            "properties": {
                "rector.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Rector"
                },
                "rector.executablePath": {
                    "type": "string",
                    "default": "rector",
                    "description": "Path to Rector executable"
                },
                "rector.configPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Rector config file (leave empty for auto-detection)"
                },
                "rector.enableAutofix": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically apply Rector fixes on save"
                },
                "rector.showDiffOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show diff view before applying changes on save"
                },
                "rector.clearCacheBeforeRun": {
                    "type": "boolean",
                    "default": false,
                    "description": "Clear Rector cache before each run"
                },
                "rector.timeout": {
                    "type": "number",
                    "default": 60000,
                    "description": "Timeout for Rector process in milliseconds (default: 60000ms = 60s)"
                },
                "rector.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable CodeLens buttons for running Rector in PHP files"
                }
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "rector.processFile",
                    "when": "editorLangId == php"
                },
                {
                    "command": "rector.processFileWithDiff",
                    "when": "editorLangId == php"
                },
                {
                    "command": "rector.applyDiffChanges",
                    "when": "false"
                },
                {
                    "command": "rector.discardDiffChanges",
                    "when": "false"
                }
            ],
            "editor/title": [
                {
                    "command": "rector.applyDiffChanges",
                    "when": "resourceFilename =~ /\\.rector\\.tmp\\.php$/ || resourceFilename =~ /\\\\.rector\\\\.tmp\\\\.php$/",
                    "group": "navigation@1"
                },
                {
                    "command": "rector.discardDiffChanges",
                    "when": "resourceFilename =~ /\\.rector\\.tmp\\.php$/ || resourceFilename =~ /\\\\.rector\\\\.tmp\\\\.php$/",
                    "group": "navigation@2"
                }
            ],
            "editor/context": [
                {
                    "command": "rector.processFile",
                    "when": "editorLangId == php",
                    "group": "1_modification"
                },
                {
                    "command": "rector.processFileWithDiff",
                    "when": "editorLangId == php",
                    "group": "1_modification"
                }
            ],
            "explorer/context": [
                {
                    "command": "rector.processFiles",
                    "when": "explorerResourceIsFolder || resourceExtname == .php",
                    "group": "2_workspace"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "test:unit": "mocha --require ts-node/register 'src/test/**/*.test.ts'"
    },
    "devDependencies": {
        "@types/mocha": "^10.0",
        "@types/node": "^24.1",
        "@types/vscode": "^1.1",
        "@typescript-eslint/eslint-plugin": "^8.4",
        "@typescript-eslint/parser": "^8.4",
        "@vscode/test-electron": "^2.5",
        "@vscode/vsce": "^3.7",
        "eslint": "^9.3",
        "glob": "^11.0",
        "mocha": "^11.7",
        "ts-node": "^10.9",
        "typescript": "^5.9"
    }
}
